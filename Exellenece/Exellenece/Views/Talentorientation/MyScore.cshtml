@model Exellenece.Models.Exam1
@{
    ViewBag.Title = "EndTest";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Inner Page Breadcrumb -->
<section class="inner_page_breadcrumb dashboard">
    <div class="container">
        <div class="row">

        </div>
    </div>
</section>

<!-- About Text Content -->
<section class="about-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-2 col-xl-2 post2 hidden2">
                <div class="side-heading">
                    <i class="fa fa-book"></i> Student Panel
                    <div class="clear"></div>
                </div>


                @{
                    Html.RenderAction("_BindLeftMenu");
                }




            </div>

            <div class="col-md-12 col-lg-10 col-xl-10">
                <nav class="breadcrumb_widgets" aria-label="breadcrumb mb30">
                    <h4 class="title float-left">CBSE - Class 06</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">My Courses</a></li>
                        <li class="breadcrumb-item"><a href="#">Class VI</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Child Category</li>
                    </ol>
                         
                    <div class="clear"></div>
                </nav>

                <div class="row">


                    <div class="col-md-12">
                        <div class="background22"> 
                            <div class="answer-bg">Your <strong>@ViewBag.RightAns</strong> answer is correct out of <strong>@Model.ExamList.Count</strong> questions</div>

                            @foreach (var item in Model.ExamList)
                            {
                                <div class="q11">

                                    <div class="common_data question2">
                                        @Html.Raw(item.Question);


                                    </div>

                                    <div class="answer">

                                        <p><span class="red11">Answer :</span>  @item.Right_Answer</p>

                                        <div class="clear"></div>
                                    </div>
                                    <div class="description">
                                        <p>
                                            @item.Answer_Description
                                        </p>
                                    </div>

                                </div>
                            }

                            


 

                            <div class="clear"></div>
                        </div>

                    </div>





                </div>
            </div>
        </div>

    </div>
</section>

<!-- Divider -->