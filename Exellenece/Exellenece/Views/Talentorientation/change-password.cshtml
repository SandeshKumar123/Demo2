@model Exellenece.Models.Register1
@{
    ViewBag.Title = "changepassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

	<!-- Inner Page Breadcrumb -->
<section class="inner_page_breadcrumb dashboard">
    <div class="container">
        <div class="row">

        </div>
    </div>
</section>

<!-- About Text Content -->
<section class="about-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-2 col-xl-2 post2 hidden2">
                <div class="side-heading">
                    <i class="fa fa-book"></i> Student Panel
                    <div class="clear"></div>
                </div>
                @{
                    Html.RenderAction("_BindLeftMenu");
                }

            </div>

            <div class="col-md-12 col-lg-10 col-xl-10">
                <nav class="breadcrumb_widgets" aria-label="breadcrumb mb30">
                    <h4 class="title float-left">Change Password</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                    </ol>
                    <div class="clear"></div>
                </nav>

                <div class="background22">
@using (Html.BeginForm("change-password", "Talentorientation", FormMethod.Post))
{
                    <div class="row">
                        
                        <div class="col-xl-6">
                            @if (ViewBag.Err != null)
                            {
                                <div style="font-size:14px; ">
                                    <div class="alert alert-danger alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>Error!! </strong>@ViewBag.Err
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Succ != null)
                            {
                                <div style="font-size:14px; ">
                                    <div class="alert alert-success alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>Success!! </strong>@ViewBag.Succ
                                    </div>
                                </div>
                            }
                            <div class="password_change_form"> 
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Old Password</label>
                                        @Html.PasswordFor(Model => Model.Current_Password, new {@class = "form-control" })
                                        <span>@Html.ValidationMessageFor(model => model.Current_Password)</span> 
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword2">New Password</label>
                                        @Html.PasswordFor(Model => Model.Password, new {@class = "form-control" })
                                        <span>@Html.ValidationMessageFor(model => model.Password)</span> 
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword3">Confirm Password</label>
                                        @Html.PasswordFor(Model => Model.Confirm_password, new {@class = "form-control" })
                                        <span>@Html.ValidationMessageFor(model => model.Confirm_password)</span> 
                                    </div> 
                            </div> 
                            <input type="submit" class="my_setting_savechange_btn btn btn-thm" value="Change Password" /> 
                        </div>






                    </div>
}
                </div>
            </div>
        </div>

    </div>
</section>
