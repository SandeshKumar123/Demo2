@model Exellenece.Models.Register1
@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/_LayoutTalentorientation.cshtml";
}
<!-- Inner Page Breadcrumb -->
<section class="inner_page_breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="breadcrumb_content">
                    <h4 class="breadcrumb_title">Register</h4>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Register</li>
                    </ol>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="header_socallink">
                    <div class="footer_social_widget mt15">
                        <ul>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="our-log bgc-fa sec">
    <div class="container">
        <div class="row">



            <div class="col-sm-12 col-md-6">
                <div class="h-center dib">
                    <h2 class="title22">GET The <strong>Talent Orientations</strong></h2>
                    <div class="se">
                        <ul>
                            <li>Live Interactive Classes</li>
                            <li>Prepare Entrance Exams</li>
                            <li>Test Generator</li>
                            <li>Scholarships</li>
                            <li>Mentoring</li>
                        </ul>
                    </div>
                </div>

            </div>





            <div class="col-sm-12 col-md-6">
                <div class="login_form inner_page">
                    @using (Html.BeginForm("register", "Talentorientation", FormMethod.Post))
                    {

                        <div class="heading">
                            @if (ViewBag.Err != null)
                            {
                                <div style="font-size:14px; ">
                                    <div class="alert alert-danger alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>Error!! </strong>@ViewBag.Err
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Succ != null)
                            {
                                <div style="font-size:14px; ">
                                    <div class="alert alert-success alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>Success!! </strong>@ViewBag.Succ
                                    </div>
                                </div>
                            }
                            <h3 class="text-center">Sign Up to Continue</h3>

                            <div style="text-align:center;"> Have an account?  <a href="/login" style="text-align:center;"><strong>Login</strong></a></div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.Name, new { @placeholder = "Enter name", @class = "form-control" })
                            <span>@Html.ValidationMessageFor(model => model.Name)</span>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(Model => Model.Email, new { @placeholder = "Enter E-mail", @class = "form-control" })
                            <span>@Html.ValidationMessageFor(model => model.Email)</span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr0">
                                <div class="form-group">
                                    @Html.PasswordFor(Model => Model.Password, new { @placeholder = "Enter password", @class = "form-control" })
                                    <span>@Html.ValidationMessageFor(model => model.Password)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.PasswordFor(Model => Model.Confirm_password, new { @placeholder = "Confirm password", @class = "form-control" })
                                    <span>@Html.ValidationMessageFor(model => model.Confirm_password)</span>

                                </div>
                            </div>

                            <div class="col-md-6 pr0">
                                @Html.TextBoxFor(Model => Model.Pin_Code, new { @placeholder = "Area Pin Code", @class = "form-control" })
                                <span>@Html.ValidationMessageFor(model => model.Pin_Code)</span>

                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(Model => Model.Mobile_No, new { @placeholder = "Mobile No.", @class = "form-control" })
                                    <span>@Html.ValidationMessageFor(model => model.Mobile_No)</span>
                                </div>
                            </div>




                            <div class="col-md-6 pr0">
                                @Html.DropDownListFor(model => model.Board_Id, new SelectList(Model.BoardList, "Id", "Board_Name"), "Select Board", new { @class = "form-control", id = "boardid" })

                                <span>@Html.ValidationMessageFor(model => model.Board_Id)</span>


                            </div>


                            <div class="col-md-6">

                                @Html.DropDownListFor(model => model.Class_Id, new SelectList(Model.ClassList, "Id", "Class_Name"), "Select Class", new { @class = "form-control", id = "classid" })
                                <span>@Html.ValidationMessageFor(model => model.Class_Id)</span>

                            </div>

                            <div class="col-sm-4">
                                <label data-type="Student" class="radio-btn">
                                    @Html.RadioButtonFor(model => model.Type, "Student") Student
                                </label>
                            </div>

                            <div class="col-sm-4">
                                <label data-type="Student" class="radio-btn">
                                    @Html.RadioButtonFor(model => model.Type, "Parent") Parent
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label data-type="Student" class="radio-btn">

                                    @Html.RadioButtonFor(model => model.Type, "Teacher") Teacher
                                </label>
                            </div>
                            <span style="margin-left:39%;">@Html.ValidationMessageFor(model => model.Type)</span>
                              
                        </div>

                        <div class="form-group custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input">


                        </div>
                        <button type="submit" class="btn btn-log btn-block btn-thm2">Join Now For Free</button>

                        <div class="row mt40">
                            <!--<div class="col-lg">
                    <button type="submit" class="btn btn-block color-white bgc-fb mb0"><i class="fa fa-facebook float-left mt5"></i> Facebook</button>
                </div>-->
                            <!--<div class="col-lg">
                    <button type="submit" class="btn btn2 btn-block color-white bgc-gogle mb0"><i class="fa fa-google float-left mt5"></i> Google</button>
                </div>-->
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>
 