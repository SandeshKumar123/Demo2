@model Exellenece.Models.AdminLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Excellence Webs</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Manage/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <!-- Tempusdominus Bbootstrap 4 -->
    <!-- iCheck -->
     <link rel="stylesheet" href="~/Content/Manage/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link href="~/Content/Manage/css/bootstrap.min.css" rel="stylesheet" />
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/Content/Manage/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Manage/css/adminlte.min.css">
    <link href="~/Content/Manage/css/gsdk-bootstrap-wizard.css" rel="stylesheet" />
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Content/Manage/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Content/Manage/plugins/daterangepicker/daterangepicker.css">
    @*<link href="~/Content/Manage/css/validation.css" rel="stylesheet" />*@

    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/Manage/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <!-- Google Font: Source Sans Pro -->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo"> <a href=""><img src="~/Content/Manage/img/logo.png"></a> </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg" style = "font-size:15px">Admin Login</p>
              @if (ViewBag.Err != null)
              {
                    <div style="width: 100%; font-size: 13px; ">
                        <div class="alert alert-danger alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Error!!</strong> @ViewBag.Err
                        </div>
                    </div>
                }

                @using (Html.BeginForm("Index", "Manage", FormMethod.Post))
                {

                    <div class="input-group mb-3">
                        @Html.TextBoxFor(Model => Model.Admin_Id, new { @style = "font-size:17px;height: 40px", @class = "form-control", @placeholder = "Login Id" })
                        <div class="input-group-append">
                            <div class="input-group-text"> <span class="fas fa-envelope"><span style="color:red; font-size:17px">@Html.ValidationMessageFor(model => model.Admin_Id)</span> </span> </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(Model => Model.Admin_password, new { style = "font-size:17px;height: 40px", @class = "form-control", @placeholder = "Password" })
                        <div class="input-group-append">
                            <div class="input-group-text"> <span class="fas fa-lock"><span style="color:red;font-size:17px">@Html.ValidationMessageFor(model => model.Admin_password)</span> </span> </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label style = "font-size:15px" for="remember"> Remember Me </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" style = "font-size:15px" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>

                }
                <!-- /.social-auth-links -->
                <!--<p class="mb-1"> <a href="forgot-password.html">I forgot my password</a> </p>
                <p class="mb-0"> <a href="register.html" class="text-center">Register a new membership</a> </p>-->
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->

    <script src="~/Content/Manage/validationjs/jquery-2.1.3.min.js"></script>
    <script src="~/Content/Manage/validationjs/jquery.validate.min.js"></script>
    <script src="~/Content/Manage/validationjs/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/Manage/js/bootstrap.min.js"></script>
</body>
</html>
